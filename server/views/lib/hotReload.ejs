<script>
    const ws = new WebSocket("ws://localhost:3000");

    var hasConnected = false;
    var hasDisconnected = false;
    ws.onmessage = (event) => {
        if(event.data == "connected"){
            console.info("Connected to dev server.")
            hasConnected = true;
        }
    };
    ws.onclose = ()=>{
        if(hasConnected){
            hasDisconnected = true;
            setTimeout(()=>{
                window.location.reload();
            },500)
        }
    }

</script>